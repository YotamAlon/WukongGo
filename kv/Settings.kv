<SettingsScreen>:
    canvas.before:
        Rectangle:
            pos: -2500, 0
            size: 3184, 2546
            source: 'assets/images/sakura.jpg'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                size_hint_y: None
                Label:
                    text: 'Player 1\'s name'
                    outline_color: 0,0,0,0.8
                    outline_width: 2
                    size_hint_y: None
                TextInput:
                    size_hint_y: None
                    on_text:
                        app.controller.change_player_name(0, self.text)
            BoxLayout:
                size_hint_y: None
                Label:
                    size_hint_y: None
                    outline_color: 0,0,0,0.8
                    outline_width: 2
                    text: 'Player 1\'s name'
                TextInput:
                    size_hint_y: None
                    on_text:
                        app.controller.change_player_name(1, self.text)
        BoxLayout:
            size_hint: None, None
            Button:
                text: 'Back to menu'
                on_release:
                    app.controller.navigate('menu')