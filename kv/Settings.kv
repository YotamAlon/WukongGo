<SettingsScreen>:
    canvas.before:
        Rectangle:
            pos: -2500, 0
            size: 3184, 2546
            source: 'assets/images/sakura.jpg'
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 2
            Label:
                text: 'Player 1\'s name'
            TextInput:
                on_text:
                    app.controller.change_player_name(0, self.text)
            Label:
                text: 'Player 1\'s name'
            TextInput:
                on_text:
                    app.controller.change_player_name(1, self.text)
        BoxLayout:
            size_hint: None, None
            Button:
                text: 'Back to menu'
                on_release:
                    app.controller.navigate('menu')