<ConfirmPopup>:
    size_hint: 0.5, 0.5
    GridLayout:
        cols:1
        Label:
            text: root.text
        GridLayout:
            cols: 2
            size_hint_y: None
            Button:
                text: 'Yes'
                on_release: root.answer(True)
            Button:
                text: 'No'
                on_release: root.answer(False)

<NotifyPopup>:
    size_hint: 0.5, 0.5
    GridLayout:
        cols:1
        Label:
            text: root.text
        Button:
            text: 'Ok'
            on_release: root.ok()
