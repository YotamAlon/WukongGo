<ConfirmPopup>:
    size_hint: 0.5, 0.5
    GridLayout:
        cols:1
        Label:
            text: root.text
        GridLayout:
            cols: 2
            size_hint_y: None
            Button:
                text: 'Yes'
                on_release: root.answer(True)
                background_color: 0, 0, 0, 1
            Button:
                text: 'No'
                on_release: root.answer(False)
                background_color: 0, 0, 0, 1

<NotifyPopup>:
    size_hint: 0.75, 0.3
    GridLayout:
        cols:1
        Label:
            text: root.text
        Button:
            text: 'Ok'
            on_release: root.ok()
            background_color: 0, 0, 0, 1
