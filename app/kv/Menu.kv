#:import BoardSizeChoicePopup app.Views.Fragments.BoardSizeChoicePopup

<MenuScreen>:
    background_color: 1, 1, 1, 1
    canvas.before:
        Rectangle:
            pos: -2500, -600
            size: 3184, 2546
            source: 'assets/images/sakura.jpg'
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: 0.5
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        Label:
            text: 'WukonGo'
            font_size: 20
            size_hint_y: None
            size_hint_x: 0.5
            height: 150
            pos_hint: {"center_x": 0.5}
            outline_color: 0,0,0,0.8
            outline_width: 2
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.5
            size_hint_y: None
            pos_hint: {"center_x": 0.5}
            Button:
                background_color: 0, 0, 0, 1
                text: 'New game'
                on_release: self.popup.open()
                popup: BoardSizeChoicePopup(callback=lambda s: app.controller.navigate('game', board_size=s))
            Button:
                background_color: 0, 0, 0, 1
                text: 'Settings'
                on_release: app.controller.navigate('settings')