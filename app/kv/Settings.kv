#:import PlayerColor Models.BasicTypes.Color

<SettingsScreen>:
    canvas.before:
        Rectangle:
            pos: -2500, 0
            size: 3184, 2546
            source: 'assets/images/sakura.jpg'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            pos_hint: {'top': 0}
            orientation: 'vertical'
            BoxLayout:
                size_hint_y: None
                height: 50
                Label:
                    text: 'Black\'s name'
                    outline_color: 0, 0, 0, 0.8
                    outline_width: 1
                TextInput:
                    text: app.controller.black_name
            BoxLayout:
                size_hint_y: None
                height: 50
                Label:
                    outline_color: 0, 0, 0, 0.8
                    outline_width: 1
                    text: 'White\'s name'
                TextInput:
                    text: app.controller.white_name
        BoxLayout:
            size_hint: None, None
            height: 50
            Button:
                background_color: 0, 0, 0, 1
                text: 'Back to menu'
                on_release:
                    app.controller.navigate('menu')